---
import '../styles/global.css'; // Asegúrate de que la ruta a tu CSS es correcta

import Foto4 from '../assets/img/Foto-4.jpg';
import Foto8 from '../assets/img/Foto-8.jpg';
import Foto16 from '../assets/img/Foto-16.jpg';
import Foto19 from '../assets/img/Foto-19.jpg';
import Foto30 from '../assets/img/Foto-30.jpg';
import Foto40 from '../assets/img/Foto-40.jpg';
import Foto48 from '../assets/img/Foto-48.jpg';

const galleryImages = [
  Foto4.src,
  Foto8.src,
  Foto16.src,
  Foto19.src,
  Foto30.src,
  Foto40.src,
  Foto48.src,
  Foto16.src, // Reuso el mismo import para la segunda Foto-16.jpg
];

const galleryConfig = {
  images: galleryImages,
  slideGap: 8, // El espacio de 2 (0.5rem = 8px) de space-x-2
  interval: 3000 // 3 segundos
};
---

<div class="relative w-full max-w-md mx-auto overflow-hidden rounded-xl shadow-lg">
  <div id="gallery-track" class="flex space-x-2 transition-transform duration-700 ease-in-out">
    {galleryImages.map((src) => (
      <div class="flex-shrink-0 w-[85%] aspect-[3/4] overflow-hidden rounded-lg">
        <img
          src={src}
          alt="Imagen galería"
          class="w-full h-full object-cover"
        />
      </div>
    ))}
  </div>
</div>

<script type="module" src="./galeria.ts" data-config={JSON.stringify(galleryConfig)} client:load></script>